{
  "name": "chelaile-mobile-design-system",
  "version": "0.1.0",
  "description": "車來了移動端設計系統 - 基於 Vue 3 + Vant 4 + Tailwind CSS",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix --ext .js,.ts,.vue",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@vueuse/core": "^10.11.1",
    "pinia": "^3.0.3",
    "vant": "^4.9.21",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/compiler-sfc": "^3.4.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^0.6.0",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "sass": "^1.69.0",
    "storybook": "^7.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "unplugin-auto-import": "^0.16.0",
    "unplugin-vue-components": "^0.25.0",
    "vite": "^5.0.0",
    "vite-plugin-vue-devtools": "^7.0.0",
    "vitest": "^1.0.0",
    "vue-eslint-parser": "^9.0.0"
  }
}
